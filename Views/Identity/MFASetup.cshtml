
@model MFAViewModel

<p>
    Please enter the code below in your authentication application.
</p>
<p>Alternatively scan the below QRCode with your mobile phone: </p>
<div id="qrcode" />
<p>
    @Model.Token
</p>

<form asp-controller="Identity" asp-action="MFASetup" method="post">
    <input type="hidden" asp-for="Token" /> @*user can go to and fro from page*@
    <div class="form-group">
        Enter code: <input type="text" class="form-control" asp-for="Code" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
@section Scripts{
    <script src="~/js/qrcode.js" asp-append-version="true"></script>
    <script type="text/javascript">
        new QRCode(document.getElementById("qrcode"), "@Model.QRCodeUrl");
    </script>
}